@model List<CoreMvcPortfolioProject.DAL.Entities.Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Contact Table</div>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col"><b>Title</b></th>
									<th scope="col"><b>Description</b></th>
									<th scope="col"><b>Phone</b></th>
									<th scope="col"><b>Mail</b></th>
									<th scope="col"><b>Address</b></th>
									<th scope="col"><b>Operations</b></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td><b>@item.Title</b></td>
										<td>@item.Description.Substring(0,40)...</td>
										<td><a href="tel:@item.Phone">@item.Phone</a></td>
										<td><a href="mailto:@item.Mail">@item.Mail</a></td>
										<td>@item.Address</td>
										<td>
											<a href="/AdminContact/UpdateContact/@item.ContactId" class=" btn btn-warning btn-sm" style="font-size: 12px"><i class="fa-solid fa-pencil fa-sm me-1"></i> Update</a>
											<br /><br />
											<a href="/AdminContact/DeleteContact/@item.ContactId" class="btn btn-danger btn-sm" style="font-size: 12px"><i class="fa-solid fa-trash fa-sm me-1"></i> Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

