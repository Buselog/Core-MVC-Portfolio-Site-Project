@model List<CoreMvcPortfolioProject.DAL.Entities.Feature>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Feature Table</div>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col"><b>Feature Id</b></th>
									<th scope="col"><b>Title</b></th>
									<th scope="col"><b>Description</b></th>
									<th scope="col"><b>Operations</b></th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model){
									<tr>
										<td><b>@item.FeatureId</b></td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>
											<a href="/AdminFeature/UpdateFeature/@item.FeatureId" class=" btn btn-warning btn-sm" style="font-size: 12px"><i class="fa-solid fa-pencil fa-sm me-1"></i> Update</a>
											&nbsp;
											<a href="/AdminFeature/DeleteFeature/@item.FeatureId" class="btn btn-danger btn-sm" style="font-size: 12px"><i class="fa-solid fa-trash fa-sm me-1"></i> Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>





