@model List<CoreMvcPortfolioProject.DAL.Entities.Projects>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Project Table</div>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col"><b>Title</b></th>
									<th scope="col"><b>Subtitle</b></th>
									<th scope="col"><b>Description</b></th>
									<th scope="col"><b>Project Url</b></th>
									<th scope="col"><b>Project Image Url</b></th>
									<th scope="col"><b>Operations</b></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td><b>@item.Title</b></td>
										<td>@item.Subtitle</td>
										<td>@item.ProjectDescription.Substring(0,20)...</td>
										<td><a href=">@item.ProjectUrl">@item.ProjectUrl.Substring(0, 15)...</a></td>
										<td><a href="@item.ProjectImageUrl">@item.ProjectImageUrl.Substring(0, 15)...</a></td>
										<td>
											<a href="/AdminProject/UpdateProject/@item.ProjectsId" class=" btn btn-warning btn-sm" style="font-size: 12px"><i class="fa-solid fa-pencil fa-sm me-1"></i> Update</a>
											<br /><br />
											<a href="/AdminProject/DeleteProject/@item.ProjectsId" class="btn btn-danger btn-sm" style="font-size: 12px"><i class="fa-solid fa-trash fa-sm me-1"></i> Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/AdminProject/AddNewProject/" class="btn btn-success" style="font-size: 12px"><i class="fa-solid fa-plus fa-sm me-2"> Add New Project</i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

