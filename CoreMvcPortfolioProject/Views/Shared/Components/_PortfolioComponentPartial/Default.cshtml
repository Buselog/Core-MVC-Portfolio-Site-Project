@model List<CoreMvcPortfolioProject.DAL.Entities.Projects>

<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolio</h3>
            <h1>See My Latest Projects.</h1>

            <p class="lead">Check out my latest projects</p>
        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry">

            @foreach(var item in Model){
                <div class="masonry__brick">
                    <div class="item-folio">

                        <div class="item-folio__thumb">
                            <a href="@item.ProjectImageUrl" class="thumb-link" title="@item.Title" data-size="1050x500">
                                <img src="@item.ProjectImageUrl"
                                     srcset="@item.ProjectImageUrl 1x, @item.ProjectImageUrl 2x" alt="">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                               @item.Title
                            </h3>
                            <p class="item-folio__cat">
                               @item.Subtitle
                            </p>
                        </div>

                        <a href="@item.ProjectUrl" class="item-folio__project-link" title="Project Link" target="_blank">
                            <i class="im im-link"></i>
                        </a>

                        <div class="item-folio__caption">
                            <p>@item.ProjectDescription</p>
                        </div>

                    </div> <!-- end item-folio -->
                </div> <!-- end masonry__brick -->
            }



        </div>
    </div> <!-- end masonry -->

</section>