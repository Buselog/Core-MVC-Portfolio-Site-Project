@model List<CoreMvcPortfolioProject.DAL.Entities.Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Skill Table</div>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col"><b>Skill Id</b></th>
									<th scope="col"><b>Skill Name</b></th>
									<th scope="col"><b>Skill Value</b></th>
									<th scope="col"><b>Operations</b></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td><b>@item.SkillId</b></td>
										<td>@item.SkillName</td>
										<td>@item.SkillValue</td>
										<td>
											<a href="/AdminSkill/UpdateSkill/@item.SkillId" class=" btn btn-warning btn-sm" style="font-size: 12px"><i class="fa-solid fa-pencil fa-sm me-1"></i> Update</a>
											&nbsp;
											<a href="/AdminSkill/DeleteSkill/@item.SkillId" class="btn btn-danger btn-sm" style="font-size: 12px"><i class="fa-solid fa-trash fa-sm me-1"></i> Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/AdminSkill/AddNewSkill/" class="btn btn-success" style="font-size: 12px"><i class="fa-solid fa-plus fa-sm me-2"> Add New Skill</i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


