@model List<CoreMvcPortfolioProject.DAL.Entities.About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">About Table</div>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col"><b>About Id</b></th>
									<th scope="col"><b>Title</b></th>
									<th scope="col"><b>Subdescription</b></th>
									<th scope="col"><b>Detail</b></th>
									<th scope="col"><b>Operations</b></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td><b>@item.AboutId</b></td>
										<td>@item.Title</td>
										<td>@item.SubDescription</td>
										<td>
											<textarea class="form-control">@item.Detail</textarea>
										</td>
										<td>
											<a href="/AdminAbout/UpdateAbout/@item.AboutId" class=" btn btn-warning btn-sm" style="font-size: 12px"><i class="fa-solid fa-pencil fa-sm me-1"></i> Update</a>
											&nbsp;
											<a href="/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-danger btn-sm" style="font-size: 12px"><i class="fa-solid fa-trash fa-sm me-1"></i> Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

